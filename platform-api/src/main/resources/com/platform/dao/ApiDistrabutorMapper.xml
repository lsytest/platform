<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiDistrabutorMapper">

    <resultMap type="com.platform.entity.DistributorVo" id="distrabutorMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="image" column="image"/>
        <result property="address" column="address"/>
        <result property="parentId" column="parent_id"/>
        <result property="createTime" column="create_time"/>
        <result property="state" column="state"/>
    </resultMap>

    <select id="queryBannerTotal" parameterType="string" resultType="hashmap">
        select count(distinct user_id) as fansNum from nideshop_order where distrabutor_id=#{distrabutorId}
        union
        select count(order_sn) as buyNum from nideshop_order where distrabutor_id=#{distrabutorId} and pay_status=2
    </select>

</mapper>